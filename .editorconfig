# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
# [*.]
# indent_style = space
# indent_size = 4

# Tab indentation
[{makefile, .unibeautifyrc.yml}]
indent_style = tab

# 2 space indentation
[*.{html,js,json}]
indent_style = space
indent_size = 2
